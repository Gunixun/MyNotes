<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:background="@color/purple_500">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_back"
            style="@style/ButtonWithIconStyle"
            app:icon="@drawable/back" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_apply"
            style="@style/ButtonWithIconStyle"
            app:icon="@drawable/apply" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatEditText
        style="@style/EditText"
        android:id="@+id/edit_view_title_note"
        android:layout_weight="1"
        android:gravity="center"
        android:hint="@string/hint_note_title"
        android:textSize="@dimen/title_text_size"
        android:layout_marginBottom="@dimen/margin_edit_text"
        android:layout_marginTop="@dimen/margin_edit_text"
        tools:background="@color/purple_200"/>

    <androidx.appcompat.widget.AppCompatEditText
        style="@style/EditText"
        android:id="@+id/edit_view_note"
        android:layout_weight="5"
        android:hint="@string/hint_note"
        android:textSize="@dimen/note_text_size"
        android:gravity="start"/>

</LinearLayout>